<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="student" class="springDemo.Student" scope="singleton" lazy-init="true" init-method="initMethod"  destroy-method="destroyBean">
        <property name="name" value="john"></property>
        <property name="id" value="1"></property>
        <property name="address" ref="address"></property>
    </bean>
    <bean id="address" class="springDemo.Address">
        <property name="city" value="hisar"></property>
        <property name="pincode" value="125001"></property>
    </bean>

</beans>